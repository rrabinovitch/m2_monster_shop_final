<h1>Create New Discount for <%= current_user.merchant.name %></h1>

<center>
  <%= form_for([:merchant, @discount]) do |f| %>
    <%= f.label :percentage %>
    <%= f.number_field :percentage %>

    <%= f.label :minimum_item_quantity %>
    <%= f.number_field :minimum_item_quantity %>

    <%= f.submit %>
  <% end %>
</center>
